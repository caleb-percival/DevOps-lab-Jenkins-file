pipeline {
    agent any
    stages {
        stage('Clean Up') {
            steps {
                sh "echo 'Cleaning up'"
                sh 'docker rm -f $(docker ps -aq) || true' 
                sh 'docker rmi -f $(docker images) || true'
            }
        }
        stage('Setup') {
            steps {
                sh "echo 'Creating network'"
                sh "docker create network || true"
            }
        }
        stage('Docker build') {
            steps {
                sh 'docker build -t flask-app'
            }
        }
    }
}
